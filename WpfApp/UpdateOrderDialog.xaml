<Window x:Class="WpfApp.OrderUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Order"
        Height="301" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f0f4f8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="323*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Width="380"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Height="285" Grid.ColumnSpan="2" Margin="20,0,0,0">

            <StackPanel>
                <TextBlock Text="Update Order"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2c3e50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Order ID:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtOrderID"
                             Width="200"
                             IsReadOnly="True"
                             Background="#e0e0e0"
                             Foreground="#555"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Customer ID:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCustomerID" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Employee ID:" Width="120" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmployeeID" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Order Date:" Width="120" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpOrderDate" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Back"
                            Width="70"
                            Height="29"
                            Margin="5,0"
                            Click="btnBack_Click"/>
                    <Button x:Name="btnUpdate"
                            Content="Update"
                            Width="70"
                            Height="29"
                            Margin="5,0"
                            Background="#2980b9"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnUpdate_Click"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Width="70"
                            Height="30"
                            Margin="5,0"
                            Background="#c0392b"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
